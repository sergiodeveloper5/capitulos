<odoo>
    <record id="capitulo_wizard_form_view" model="ir.ui.view">
        <field name="name">capitulo.wizard.form</field>
        <field name="model">capitulo.wizard</field>
        <field name="arch" type="xml">
            <form string="Configurar Capítulo">
                <sheet>
                    <group>
                        <field name="capitulo_id" options="{'no_create': True, 'no_edit': True}"/>
                    </group>
                    <notebook>
                        <page string="Componentes del Capítulo">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="componente_id" options="{'no_create': True, 'no_edit': True}"/>
                                    <field name="cantidad"/>
                                    <field name="precio_unitario"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button string="Añadir a Pedido" name="add_to_order" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <act_window id="action_capitulo_wizard"
        name="Configurar Capítulo"
        res_model="capitulo.wizard"
        view_mode="form"
        target="new"/>

    <!-- Puedes añadir un botón en la vista de sale.order para abrir este wizard -->
    <record id="sale_order_form_view_inherit_capitulo" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.capitulo</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_quotation_send']" position="after">
                <button name="%(action_capitulo_wizard)d" type="action" string="Añadir Capítulo" class="oe_highlight"/>
            </xpath>
        </field>
    </record>
</odoo>