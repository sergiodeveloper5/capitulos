<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="capitulo_wizard_form_view" model="ir.ui.view">
        <field name="name">capitulo.wizard.form</field>
        <field name="model">capitulo.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="capitulo_id" options="{'no_create': True, 'no_edit': True}"/>
                    </group>
                    <label for="line_ids" string="Componentes"/>
                    <field name="line_ids">
                        <list editable="bottom">
                            <field name="componente_id" options="{'no_create': True, 'no_edit': True}"/>
                            <field name="cantidad"/>
                            <field name="precio_unitario"/>
                        </list>
                    </field>
                </sheet>
                <footer>
                    <button string="Añadir a Pedido" name="add_to_order" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_capitulo_wizard" model="ir.actions.act_window">
        <field name="name">Añadir Capítulo</field>
        <field name="res_model">capitulo.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>