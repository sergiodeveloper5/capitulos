<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista formulario de Capítulo -->
    <record id="view_capitulo_contrato_form" model="ir.ui.view">
        <field name="name">capitulo.contrato.form</field>
        <field name="model">capitulo.contrato</field>
        <field name="arch" type="xml">
            <form string="Capítulo Contratado">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="codigo"/>
                        </group>
                        <group>
                            <field name="descripcion"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Componentes">
                            <field name="componente_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="type"/>
                                    <field name="precio_unitario"/>
                                    <field name="cantidad"/>
                                    <field name="uom_id"/>
                                    <field name="incluir_por_defecto"/>
                                    <field name="product_id"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Condiciones Legales">
                            <field name="condiciones_legales"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista lista de Capítulos -->
    <record id="view_capitulo_contrato_tree" model="ir.ui.view">
        <field name="name">capitulo.contrato.tree</field>
        <field name="model">capitulo.contrato</field>
        <field name="arch" type="xml">
            <tree string="Capítulos Contratados">
                <field name="codigo"/>
                <field name="name"/>
                <field name="descripcion"/>
            </tree>
        </field>
    </record>

    <!-- Vista de búsqueda -->
    <record id="view_capitulo_contrato_search" model="ir.ui.view">
        <field name="name">capitulo.contrato.search</field>
        <field name="model">capitulo.contrato</field>
        <field name="arch" type="xml">
            <search string="Buscar Capítulos">
                <field name="name"/>
                <field name="codigo"/>
                <field name="descripcion"/>
                <group expand="0" string="Agrupar por">
                    <filter string="Código" name="group_codigo" context="{'group_by': 'codigo'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Acción -->
    <record id="action_capitulo_contrato" model="ir.actions.act_window">
        <field name="name">Capítulos Contratados</field>
        <field name="res_model">capitulo.contrato</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear el primer capítulo contratado
            </p>
            <p>
                Los capítulos permiten agrupar servicios técnicos completos con múltiples componentes.
            </p>
        </field>
    </record>
</odoo>
