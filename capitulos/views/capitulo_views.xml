<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_capitulo_contrato_form" model="ir.ui.view">
            <field name="name">capitulo.contrato.form</field>
            <field name="model">capitulo.contrato</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="value"/>
                            <field name="value2"/>
                        </group>
                        <notebook>
                            <page string="Detalle de Capítulos">
                                <field name="chapter_line_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="type"/>
                                        <field name="precio_unitario"/>
                                        <field name="cantidad"/>
                                        <field name="total_linea"/> </tree>
                                    <form>
                                        <group>
                                            <field name="name"/>
                                            <field name="type"/>
                                            <field name="precio_unitario"/>
                                            <field name="cantidad"/>
                                            <field name="total_linea"/>
                                        </group>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_capitulo_contrato_tree" model="ir.ui.view">
            <field name="name">capitulo.contrato.tree</field>
            <field name="model">capitulo.contrato</field>
            <field name="arch" type="xml">
                <tree string="Capítulos de Contrato">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="value"/>
                    <field name="value2"/>
                </tree>
            </field>
        </record>

        <record id="view_capitulo_contrato_search" model="ir.ui.view">
            <field name="name">capitulo.contrato.search</field>
            <field name="model">capitulo.contrato</field>
            <field name="arch" type="xml">
                <search string="Buscar Capítulos">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="value"/>
                </search>
            </field>
        </record>

        <record id="action_capitulo_contrato" model="ir.actions.act_window">
            <field name="name">Capítulos de Contrato</field>
            <field name="res_model">capitulo.contrato</field>
            <field name="view_mode">tree,form</field> <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crea tu primer Capítulo de Contrato
                </p>
            </field>
        </record>

        <menuitem id="menu_capitulos_root"
                  name="Gestión de Capítulos"
                  sequence="10"/> <menuitem id="menu_capitulos_main"
                  name="Capítulos"
                  parent="menu_capitulos_root"
                  action="action_capitulo_contrato"
                  sequence="10"/>

    </data>
</odoo>