<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_capitulo_contrato_form" model="ir.ui.view">
            <field name="name">capitulo.contrato.form</field>
            <field name="model">capitulo.contrato</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_crear_desde_plantilla" type="object" 
                                    class="oe_stat_button" icon="fa-copy"
                                    string="Crear desde Plantilla"
                                    invisible="not id"/>
                        </div>
                        <group>
                            <group>
                                <field name="codigo"/>
                                <field name="name"/>
                                <field name="es_plantilla"/>
                            </group>
                            <group>
                                <field name="plantilla_id" domain="[('es_plantilla', '=', True), ('id', '!=', id)]"
                                       options="{'no_create': True}"
                                       invisible="context.get('default_plantilla_id', False)"/>
                                <field name="description"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Componentes">
                                <field name="componente_ids" widget="one2many_list">
                                    <list editable="bottom">
                                        <field name="name"/>
                                        <field name="type"/>
                                        <field name="precio_unitario"/>
                                        <field name="cantidad"/>
                                        <field name="uom_id"/>
                                        <field name="incluir_por_defecto"/>
                                        <field name="product_id"/>
                                    </list>
                                    <form>
                                        <group>
                                            <field name="name"/>
                                            <field name="type"/>
                                            <field name="precio_unitario"/>
                                            <field name="cantidad"/>
                                            <field name="uom_id"/>
                                            <field name="incluir_por_defecto"/>
                                            <field name="product_id"/>
                                        </group>
                                    </form>
                                </field>
                            </page>
                            <page string="Condiciones Legales">
                                <field name="condiciones_legales" nolabel="1"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_capitulo_contrato_list" model="ir.ui.view">
            <field name="name">capitulo.contrato.list</field>
            <field name="model">capitulo.contrato</field>
            <field name="arch" type="xml">
                <list>
                    <field name="codigo"/>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="es_plantilla" widget="boolean_toggle"/>
                    <field name="plantilla_id" optional="hide"/>
                </list>
            </field>
        </record>

        <record id="view_capitulo_contrato_search" model="ir.ui.view">
            <field name="name">capitulo.contrato.search</field>
            <field name="model">capitulo.contrato</field>
            <field name="arch" type="xml">
                <search>
                    <field name="codigo"/>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="plantilla_id"/>
                    <filter string="Plantillas" name="es_plantilla" domain="[('es_plantilla', '=', True)]"/>
                    <filter string="Capítulos Normales" name="no_plantilla" domain="[('es_plantilla', '=', False)]"/>
                    <separator/>
                    <filter string="Basados en Plantilla" name="con_plantilla" domain="[('plantilla_id', '!=', False)]"/>
                    <group expand="0" string="Agrupar por">
                        <filter string="Tipo" name="group_by_tipo" context="{'group_by': 'es_plantilla'}"/>
                        <filter string="Plantilla Base" name="group_by_plantilla" context="{'group_by': 'plantilla_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_capitulo_contrato" model="ir.actions.act_window">
            <field name="name">Capítulos de Contrato</field>
            <field name="res_model">capitulo.contrato</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'search_default_no_plantilla': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crea tu primer Capítulo de Contrato
                </p>
                <p>
                    Los capítulos te permiten agrupar componentes relacionados para crear presupuestos más organizados.
                    Puedes crear un capítulo desde cero o basarte en una plantilla existente.
                </p>
            </field>
        </record>

        <!-- Acción para plantillas -->
        <record id="action_capitulo_plantillas" model="ir.actions.act_window">
            <field name="name">Plantillas de Capítulos</field>
            <field name="res_model">capitulo.contrato</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'search_default_es_plantilla': 1, 'default_es_plantilla': True}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crea tu primera Plantilla de Capítulo
                </p>
                <p>
                    Las plantillas te permiten crear capítulos predefinidos que pueden ser reutilizados.
                    Marca un capítulo como "Es Plantilla" para que aparezca aquí.
                </p>
            </field>
        </record>

        <!-- Acción para crear desde plantilla -->
        <record id="action_crear_desde_plantilla" model="ir.actions.act_window">
            <field name="name">Crear Capítulo desde Plantilla</field>
            <field name="res_model">capitulo.contrato</field>
            <field name="view_mode">form</field>
            <field name="target">current</field>
            <field name="context">{'form_view_initial_mode': 'edit'}</field>
        </record>

        <!-- Vista de formulario para componentes -->
        <record id="view_componente_form" model="ir.ui.view">
            <field name="name">capitulo.componente.form</field>
            <field name="model">capitulo.componente</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="type"/>
                            <field name="precio_unitario"/>
                            <field name="cantidad"/>
                            <field name="uom_id"/>
                            <field name="incluir_por_defecto"/>
                            <field name="product_id"/>
                            <field name="capitulo_id" invisible="context.get('hide_capitulo', False)"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vista de lista para componentes -->
        <record id="view_componente_list" model="ir.ui.view">
            <field name="name">capitulo.componente.list</field>
            <field name="model">capitulo.componente</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="type"/>
                    <field name="precio_unitario"/>
                    <field name="cantidad"/>
                    <field name="uom_id"/>
                    <field name="incluir_por_defecto"/>
                    <field name="product_id"/>
                    <field name="capitulo_id"/>
                </list>
            </field>
        </record>

        <!-- Vista de búsqueda para componentes -->
        <record id="view_componente_search" model="ir.ui.view">
            <field name="name">capitulo.componente.search</field>
            <field name="model">capitulo.componente</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="type"/>
                    <field name="product_id"/>
                    <field name="capitulo_id"/>
                    <filter string="Incluir por defecto" name="incluir_por_defecto" domain="[('incluir_por_defecto', '=', True)]"/>
                    <group expand="0" string="Agrupar por">
                        <filter string="Tipo" name="group_by_type" context="{'group_by': 'type'}"/>
                        <filter string="Capítulo" name="group_by_capitulo" context="{'group_by': 'capitulo_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Acción para componentes -->
        <record id="action_componente" model="ir.actions.act_window">
            <field name="name">Componentes</field>
            <field name="res_model">capitulo.componente</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crea tu primer componente
                </p>
            </field>
        </record>
</odoo>