<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Heredar vista de pedido de venta -->
    <record id="view_order_form_inherit_capitulo" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.capitulo</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_quotation_send']" position="after">
                <button name="action_add_capitulo" type="object" 
                        string="Añadir Capítulo" 
                        class="btn-secondary"
                        attrs="{'invisible': [('state', 'in', ['sale', 'done', 'cancel'])]}"/>
            </xpath>
            <xpath expr="//field[@name='order_line']" position="after">
                <field name="capitulo_ids" attrs="{'invisible': [('capitulo_ids', '=', [])]}" widget="many2many_tags"/>
            </xpath>
        </field>
    </record>
</odoo>