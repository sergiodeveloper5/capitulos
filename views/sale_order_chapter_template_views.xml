<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Vista de Lista para Plantillas de Capítulos -->
        <record id="sale_order_chapter_template_list_view" model="ir.ui.view">
            <field name="name">sale.order.chapter.template.list</field>
            <field name="model">sale.order.chapter.template</field>
            <field name="arch" type="xml">
                <list string="Plantillas de Capítulos" default_order="sequence,name">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="section_count" string="Secciones"/>
                    <field name="active" widget="boolean_toggle"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </list>
            </field>
        </record>
        
        <!-- Vista de Formulario para Plantillas de Capítulos -->
        <record id="sale_order_chapter_template_form_view" model="ir.ui.view">
            <field name="name">sale.order.chapter.template.form</field>
            <field name="model">sale.order.chapter.template</field>
            <field name="arch" type="xml">
                <form string="Plantilla de Capítulo">
                    <header>
                        <button name="action_view_sections" type="object" 
                                string="Ver Secciones" class="btn-primary"
                                attrs="{'invisible': [('section_count', '=', 0)]}"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_sections" type="object" 
                                    class="oe_stat_button" icon="fa-list-ul">
                                <field name="section_count" widget="statinfo" 
                                       string="Secciones"/>
                            </button>
                        </div>
                        
                        <widget name="web_ribbon" title="Archivado" 
                                bg_color="bg-danger" 
                                attrs="{'invisible': [('active', '=', True)]}"/>
                        
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="Nombre del capítulo..."/>
                            </h1>
                        </div>
                        
                        <group>
                            <group>
                                <field name="sequence"/>
                                <field name="active"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                            <group>
                                <field name="description" placeholder="Descripción detallada del capítulo..."/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Secciones" name="sections">
                                <field name="section_ids" context="{'default_chapter_template_id': active_id}">
                                    <list editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="name"/>
                                        <field name="section_type"/>
                                        <field name="is_readonly_commercial" string="Solo Lectura Comercial"/>
                                        <field name="product_count" string="Productos"/>
                                        <button name="action_view_products" type="object" 
                                                icon="fa-external-link" 
                                                title="Ver Productos"
                                                attrs="{'invisible': [('product_count', '=', 0)]}"/>
                                    </list>
                                    <form string="Sección de Capítulo">
                                        <sheet>
                                            <div class="oe_title">
                                                <label for="name" class="oe_edit_only"/>
                                                <h1>
                                                    <field name="name" placeholder="Nombre de la sección..."/>
                                                </h1>
                                            </div>
                                            
                                            <group>
                                                <group>
                                                    <field name="section_type"/>
                                                    <field name="sequence"/>
                                                    <field name="is_readonly_commercial" readonly="1"/>
                                                </group>
                                                <group>
                                                    <field name="description" placeholder="Descripción de la sección..."/>
                                                </group>
                                            </group>
                                            
                                            <group string="Productos Predefinidos">
                                                <field name="product_ids" nolabel="1">
                                                    <list>
                                                        <field name="name"/>
                                                        <field name="default_code"/>
                                                        <field name="list_price"/>
                                                        <field name="uom_id"/>
                                                    </list>
                                                </field>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        
        <!-- Vista de Búsqueda para Plantillas de Capítulos -->
        <record id="sale_order_chapter_template_search_view" model="ir.ui.view">
            <field name="name">sale.order.chapter.template.search</field>
            <field name="model">sale.order.chapter.template</field>
            <field name="arch" type="xml">
                <search string="Buscar Plantillas de Capítulos">
                    <field name="name" string="Nombre" 
                           filter_domain="['|', ('name', 'ilike', self), ('description', 'ilike', self)]"/>
                    <field name="description"/>
                    <field name="section_ids" string="Secciones"/>
                    
                    <filter string="Activas" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Archivadas" name="inactive" domain="[('active', '=', False)]"/>
                    
                    <separator/>
                    <filter string="Con Secciones" name="with_sections" 
                            domain="[('section_count', '>', 0)]"/>
                    <filter string="Sin Secciones" name="without_sections" 
                            domain="[('section_count', '=', 0)]"/>
                    
                    <group expand="0" string="Agrupar Por">
                        <filter string="Estado" name="group_active" 
                                context="{'group_by': 'active'}"/>
                        <filter string="Compañía" name="group_company" 
                                context="{'group_by': 'company_id'}" 
                                groups="base.group_multi_company"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Acción para Plantillas de Capítulos -->
        <record id="action_chapter_template" model="ir.actions.act_window">
            <field name="name">Plantillas de Capítulos</field>
            <field name="res_model">sale.order.chapter.template</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="sale_order_chapter_template_search_view"/>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    ¡Crea tu primera plantilla de capítulo!
                </p>
                <p>
                    Las plantillas de capítulos te permiten crear estructuras predefinidas
                    con secciones y productos que pueden ser reutilizadas en múltiples presupuestos.
                </p>
                <p>
                    <strong>Ejemplo:</strong> Crea una plantilla "MONTACARGAS MC-1700" con secciones
                    de Alquiler, Montaje, Portes y Otros Conceptos.
                </p>
            </field>
        </record>
        
        <!-- Vista Kanban para Plantillas de Capítulos -->
        <record id="sale_order_chapter_template_kanban_view" model="ir.ui.view">
            <field name="name">sale.order.chapter.template.kanban</field>
            <field name="model">sale.order.chapter.template</field>
            <field name="arch" type="xml">
                <kanban default_group_by="active" class="o_kanban_small_column">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="section_count"/>
                    <field name="active"/>
                    <field name="sequence"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <i class="fa fa-folder-o fa-2x" title="Plantilla de Capítulo"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div class="o_kanban_record_subtitle">
                                        <field name="description"/>
                                    </div>
                                    <div class="oe_kanban_bottom_left">
                                        <span class="badge badge-pill">
                                            <i class="fa fa-list-ul"/> 
                                            <field name="section_count"/> secciones
                                        </span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <span t-if="!record.active.raw_value" 
                                              class="badge badge-danger">Archivado</span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        
        <!-- Actualizar la acción para incluir vista kanban -->
        <record id="action_chapter_template" model="ir.actions.act_window">
            <field name="view_mode">kanban,list,form</field>
        </record>
        
    </data>
</odoo>