<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Heredar vista de pedido de ventas -->
    <record id="view_order_form_inherit_capitulo" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.capitulo</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_quotation_send']" position="after">
                <button name="action_add_capitulo" type="object" 
                        string="Gestionar Capítulos" 
                        class="btn-primary"
                        help="Crear nuevos capítulos o añadir capítulos existentes al presupuesto"
                        invisible="state in ['sale', 'done', 'cancel']"/>
            </xpath>
            <xpath expr="//field[@name='order_line']" position="attributes">
                <attribute name="context">{
                    'tree_view_ref': 'capitulos.view_order_line_tree_inherit_capitulo'
                }</attribute>
                <attribute name="widget">section_and_note_one2many</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']" position="after">
                <field name="capitulo_ids" invisible="not capitulo_ids" widget="many2many_tags"/>
            </xpath>
        </field>
    </record>
    
    <!-- Vista de árbol personalizada para líneas de pedido con restricciones -->
    <record id="view_order_line_tree_inherit_capitulo" model="ir.ui.view">
        <field name="name">sale.order.line.tree.inherit.capitulo</field>
        <field name="model">sale.order.line</field>
        <field name="arch" type="xml">
            <list create="false" delete="false" edit="false">
                <field name="sequence" widget="handle"/>
                <field name="product_id"/>
                <field name="name" decoration-bf="es_encabezado_capitulo or es_encabezado_seccion" decoration-info="es_encabezado_capitulo" decoration-warning="es_encabezado_seccion"/>
                <field name="product_uom_qty"/>
                <field name="product_uom" groups="uom.group_uom"/>
                <field name="price_unit"/>
                <field name="tax_id" widget="many2many_tags"/>
                <field name="price_subtotal"/>
                <field name="es_encabezado_capitulo" invisible="1"/>
                <field name="es_encabezado_seccion" invisible="1"/>
            </list>
        </field>
    </record>

</odoo>