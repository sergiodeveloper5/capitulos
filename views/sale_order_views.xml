<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Heredar vista de pedido de ventas -->
    <record id="view_order_form_inherit_capitulo" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.capitulo</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form//header" position="inside">
                <button name="action_add_capitulo" string="Gestionar Capítulos" type="object" class="btn-primary" invisible="state not in ['draft', 'sent']"/>
            </xpath>
            <xpath expr="//field[@name='order_line']" position="attributes">
                <attribute name="context">{
                    'tree_view_ref': 'capitulos.view_order_line_tree_inherit_capitulo'
                }</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']" position="after">
                <field name="capitulo_ids" invisible="not capitulo_ids" widget="many2many_tags"/>
            </xpath>
        </field>
    </record>
    
    <!-- Vista de árbol personalizada para líneas de pedido con restricciones -->
    <record id="view_order_line_tree_inherit_capitulo" model="ir.ui.view">
        <field name="name">sale.order.line.tree.inherit.capitulo</field>
        <field name="model">sale.order.line</field>
        <field name="arch" type="xml">
            <list create="true" delete="true" edit="true" editable="bottom">
                <field name="sequence" widget="handle" readonly="es_encabezado_capitulo or es_encabezado_seccion"/>
                <field name="product_id" required="not (es_encabezado_capitulo or es_encabezado_seccion)" domain="[('sale_ok', '=', True)]" readonly="es_encabezado_capitulo or es_encabezado_seccion"/>
                <field name="name" decoration-bf="es_encabezado_capitulo or es_encabezado_seccion" decoration-info="es_encabezado_capitulo" decoration-warning="es_encabezado_seccion" readonly="es_encabezado_capitulo or es_encabezado_seccion"/>
                <field name="product_uom_qty" readonly="es_encabezado_capitulo or es_encabezado_seccion"/>
                <field name="product_uom" groups="uom.group_uom" readonly="es_encabezado_capitulo or es_encabezado_seccion"/>
                <field name="price_unit" readonly="es_encabezado_capitulo or es_encabezado_seccion"/>
                <field name="tax_id" widget="many2many_tags" readonly="es_encabezado_capitulo or es_encabezado_seccion"/>
                <field name="price_subtotal"/>
                <field name="es_encabezado_capitulo" invisible="1"/>
                <field name="es_encabezado_seccion" invisible="1"/>
            </list>
        </field>
    </record>

</odoo>
