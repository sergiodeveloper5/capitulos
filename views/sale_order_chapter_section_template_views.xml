<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Vista de Lista para Plantillas de Secciones -->
        <record id="sale_order_chapter_section_template_list_view" model="ir.ui.view">
            <field name="name">sale.order.chapter.section.template.list</field>
            <field name="model">sale.order.chapter.section.template</field>
            <field name="arch" type="xml">
                <list string="Plantillas de Secciones" default_order="chapter_template_id,sequence,name">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="chapter_template_id"/>
                    <field name="section_type"/>
                    <field name="is_readonly_commercial" string="Solo Lectura Comercial"/>
                    <field name="product_count" string="Productos"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </list>
            </field>
        </record>
        
        <!-- Vista de Formulario para Plantillas de Secciones -->
        <record id="sale_order_chapter_section_template_form_view" model="ir.ui.view">
            <field name="name">sale.order.chapter.section.template.form</field>
            <field name="model">sale.order.chapter.section.template</field>
            <field name="arch" type="xml">
                <form string="Plantilla de Sección">
                    <header>
                        <button name="action_view_products" type="object" 
                                string="Ver Productos" class="btn-primary"
                                attrs="{'invisible': [('product_count', '=', 0)]}"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_products" type="object" 
                                    class="oe_stat_button" icon="fa-cube">
                                <field name="product_count" widget="statinfo" 
                                       string="Productos"/>
                            </button>
                        </div>
                        
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="Nombre de la sección..."/>
                            </h1>
                        </div>
                        
                        <group>
                            <group>
                                <field name="chapter_template_id"/>
                                <field name="section_type"/>
                                <field name="sequence"/>
                            </group>
                            <group>
                                <field name="is_readonly_commercial" readonly="1" 
                                       string="Solo Lectura para Comercial"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                        </group>
                        
                        <group string="Descripción">
                            <field name="description" nolabel="1" 
                                   placeholder="Descripción adicional de la sección..."/>
                        </group>
                        
                        <notebook>
                            <page string="Productos Predefinidos" name="products">
                                <field name="product_ids">
                                    <list>
                                        <field name="name"/>
                                        <field name="default_code"/>
                                        <field name="categ_id"/>
                                        <field name="list_price"/>
                                        <field name="uom_id"/>
                                        <field name="active" widget="boolean_toggle"/>
                                    </list>
                                    <form string="Producto">
                                        <sheet>
                                            <field name="image_1920" widget="image" class="oe_avatar"/>
                                            <div class="oe_title">
                                                <label for="name" class="oe_edit_only"/>
                                                <h1>
                                                    <field name="name" placeholder="Nombre del producto..."/>
                                                </h1>
                                            </div>
                                            <group>
                                                <group>
                                                    <field name="default_code"/>
                                                    <field name="categ_id"/>
                                                    <field name="uom_id"/>
                                                </group>
                                                <group>
                                                    <field name="list_price"/>
                                                    <field name="standard_price"/>
                                                    <field name="active"/>
                                                </group>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                                <div class="oe_clear"/>
                                <p class="text-muted" attrs="{'invisible': [('product_count', '>', 0)]}">
                                    <i class="fa fa-info-circle"/> 
                                    Los productos seleccionados aquí se añadirán automáticamente 
                                    cuando se use esta plantilla en un presupuesto.
                                </p>
                            </page>
                            
                            <page string="Configuración" name="config">
                                <group>
                                    <group string="Tipo de Sección">
                                        <field name="section_type" widget="radio"/>
                                        <div class="text-muted">
                                            <p><strong>Alquiler/Montaje:</strong> Solo lectura para comerciales</p>
                                            <p><strong>Portes/Otros:</strong> Editables por comerciales</p>
                                            <p><strong>Condiciones:</strong> Automáticas, no editables</p>
                                        </div>
                                    </group>
                                    
                                    <group string="Permisos">
                                        <field name="is_readonly_commercial" readonly="1"/>
                                        <div class="text-muted">
                                            <p>Este campo se calcula automáticamente según el tipo de sección.</p>
                                        </div>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        
        <!-- Vista de Búsqueda para Plantillas de Secciones -->
        <record id="sale_order_chapter_section_template_search_view" model="ir.ui.view">
            <field name="name">sale.order.chapter.section.template.search</field>
            <field name="model">sale.order.chapter.section.template</field>
            <field name="arch" type="xml">
                <search string="Buscar Plantillas de Secciones">
                    <field name="name" string="Nombre" 
                           filter_domain="['|', ('name', 'ilike', self), ('description', 'ilike', self)]"/>
                    <field name="chapter_template_id" string="Capítulo"/>
                    <field name="section_type"/>
                    <field name="product_ids" string="Productos"/>
                    
                    <filter string="Solo Lectura Comercial" name="readonly_commercial" 
                            domain="[('is_readonly_commercial', '=', True)]"/>
                    <filter string="Editable Comercial" name="editable_commercial" 
                            domain="[('is_readonly_commercial', '=', False)]"/>
                    
                    <separator/>
                    <filter string="Alquiler" name="rental" 
                            domain="[('section_type', '=', 'rental')]"/>
                    <filter string="Montaje" name="assembly" 
                            domain="[('section_type', '=', 'assembly')]"/>
                    <filter string="Portes" name="transport" 
                            domain="[('section_type', '=', 'transport')]"/>
                    <filter string="Otros Conceptos" name="other" 
                            domain="[('section_type', '=', 'other')]"/>
                    <filter string="Condiciones" name="conditions" 
                            domain="[('section_type', '=', 'conditions')]"/>
                    
                    <separator/>
                    <filter string="Con Productos" name="with_products" 
                            domain="[('product_count', '>', 0)]"/>
                    <filter string="Sin Productos" name="without_products" 
                            domain="[('product_count', '=', 0)]"/>
                    
                    <group expand="0" string="Agrupar Por">
                        <filter string="Capítulo" name="group_chapter" 
                                context="{'group_by': 'chapter_template_id'}"/>
                        <filter string="Tipo de Sección" name="group_type" 
                                context="{'group_by': 'section_type'}"/>
                        <filter string="Permisos" name="group_readonly" 
                                context="{'group_by': 'is_readonly_commercial'}"/>
                        <filter string="Compañía" name="group_company" 
                                context="{'group_by': 'company_id'}" 
                                groups="base.group_multi_company"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Acción para Plantillas de Secciones -->
        <record id="action_section_template" model="ir.actions.act_window">
            <field name="name">Plantillas de Secciones</field>
            <field name="res_model">sale.order.chapter.section.template</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="search_view_id" ref="sale_order_chapter_section_template_search_view"/>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    ¡Crea tu primera plantilla de sección!
                </p>
                <p>
                    Las plantillas de secciones definen las diferentes partes de un capítulo
                    y controlan qué pueden editar los comerciales.
                </p>
                <p>
                    <strong>Tipos disponibles:</strong>
                </p>
                <ul>
                    <li><strong>Alquiler:</strong> Solo lectura para comerciales</li>
                    <li><strong>Montaje:</strong> Solo lectura para comerciales</li>
                    <li><strong>Portes:</strong> Editable por comerciales</li>
                    <li><strong>Otros Conceptos:</strong> Editable por comerciales</li>
                    <li><strong>Condiciones:</strong> Automáticas, no editables</li>
                </ul>
            </field>
        </record>
        
        <!-- Vista Kanban para Plantillas de Secciones -->
        <record id="sale_order_chapter_section_template_kanban_view" model="ir.ui.view">
            <field name="name">sale.order.chapter.section.template.kanban</field>
            <field name="model">sale.order.chapter.section.template</field>
            <field name="arch" type="xml">
                <kanban default_group_by="section_type" class="o_kanban_small_column">
                    <field name="name"/>
                    <field name="chapter_template_id"/>
                    <field name="section_type"/>
                    <field name="is_readonly_commercial"/>
                    <field name="product_count"/>
                    <field name="sequence"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <i t-if="record.section_type.raw_value == 'rental'" 
                                       class="fa fa-calendar fa-2x text-primary" title="Alquiler"/>
                                    <i t-elif="record.section_type.raw_value == 'assembly'" 
                                       class="fa fa-wrench fa-2x text-warning" title="Montaje"/>
                                    <i t-elif="record.section_type.raw_value == 'transport'" 
                                       class="fa fa-truck fa-2x text-success" title="Portes"/>
                                    <i t-elif="record.section_type.raw_value == 'other'" 
                                       class="fa fa-plus-circle fa-2x text-info" title="Otros Conceptos"/>
                                    <i t-elif="record.section_type.raw_value == 'conditions'" 
                                       class="fa fa-file-text fa-2x text-muted" title="Condiciones"/>
                                    <i t-else="" class="fa fa-list fa-2x text-secondary"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div class="o_kanban_record_subtitle">
                                        <field name="chapter_template_id"/>
                                    </div>
                                    <div class="oe_kanban_bottom_left">
                                        <span class="badge badge-pill badge-secondary">
                                            <i class="fa fa-cube"/> 
                                            <field name="product_count"/> productos
                                        </span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <span t-if="record.is_readonly_commercial.raw_value" 
                                              class="badge badge-warning"
                                              title="Solo lectura para comerciales">
                                            <i class="fa fa-lock"/>
                                        </span>
                                        <span t-else="" 
                                              class="badge badge-success"
                                              title="Editable por comerciales">
                                            <i class="fa fa-edit"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        
    </data>
</odoo>