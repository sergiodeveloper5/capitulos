<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista del configurador de secciones -->
    <record id="capitulo_seccion_configurator_form_view" model="ir.ui.view">
        <field name="name">capitulo.seccion.configurator.form</field>
        <field name="model">capitulo.seccion.configurator</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="alert alert-info" role="alert">
                        <strong>Configuración de Secciones:</strong> Seleccione las secciones que desea incluir en el presupuesto y configure sus productos.
                    </div>
                    
                    <group>
                        <field name="capitulo_id" readonly="1"/>
                        <field name="order_id" invisible="1"/>
                        <field name="sale_line_id" invisible="1"/>
                    </group>
                    
                    <notebook>
                        <page string="Secciones y Productos">
                            <div class="alert alert-warning" role="alert" style="margin-bottom: 10px;">
                                <strong>🔒 Secciones Fijas:</strong> Las secciones están predefinidas y no se pueden modificar. Esta estructura garantiza la consistencia del capítulo.
                            </div>
                            
                            <field name="seccion_line_ids">
                                <list create="false" delete="false" edit="true">
                                    <field name="sequence" readonly="1"/>
                                    <field name="name" decoration-bf="es_fija"/>
                                    <field name="incluir" string="Incluir" widget="boolean_toggle"/>
                                    <field name="es_fija" readonly="1" string="Fija" widget="boolean_toggle"/>
                                </list>
                                <form>
                                    <sheet>
                                        <div class="alert alert-warning" role="alert">
                                            <strong>🔒 Sección Bloqueada:</strong> Las secciones están predefinidas y no pueden ser modificadas para mantener la estructura del capítulo.
                                        </div>
                                        <group>
                                            <field name="name" readonly="es_fija" required="1"/>
                                            <field name="incluir" string="Incluir en Presupuesto" widget="boolean_toggle"/>
                                            <field name="sequence" readonly="1"/>
                                            <field name="es_fija" readonly="1"/>
                                        </group>
                                        <notebook>
                                            <page string="Productos">
                                                <div class="alert alert-info" role="alert" style="margin-bottom: 10px;">
                                                    <strong>💡 Consejo:</strong> Haga clic en "Añadir una línea" para agregar productos a esta sección.
                                                </div>
                                                <field name="product_line_ids">
                                                    <list editable="bottom">
                                                        <field name="product_id"/>
                                                        <field name="descripcion_personalizada"/>
                                                        <field name="cantidad"/>
                                                        <field name="precio_unitario"/>
                                                    </list>
                                                </field>
                                            </page>
                                        </notebook>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                        
                        <page string="Condiciones Particulares">
                            <field name="condiciones_particulares" placeholder="Escriba aquí las condiciones particulares para este presupuesto..."/>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button name="action_apply_configuration" string="Aplicar Configuración" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Acción para el configurador -->
    <record id="capitulo_seccion_configurator_action" model="ir.actions.act_window">
        <field name="name">Configurar Secciones del Capítulo</field>
        <field name="res_model">capitulo.seccion.configurator</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>