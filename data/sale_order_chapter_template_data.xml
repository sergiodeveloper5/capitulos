<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Plantilla de Capítulo: CREMALLERA BIMASTIL -->
        <record id="chapter_template_cremallera_bimastil" model="sale.order.chapter.template">
            <field name="name">CREMALLERA BIMASTIL</field>
            <field name="description">PLATAFORMA MOTORIZADA BIMASTIL H-28.50 L-30.10 M</field>
            <field name="sequence">10</field>
            <field name="active">True</field>
        </record>
        
        <!-- Sección: Alquiler -->
        <record id="section_template_alquiler" model="sale.order.chapter.section.template">
            <field name="name">Alquiler</field>
            <field name="chapter_template_id" ref="chapter_template_cremallera_bimastil"/>
            <field name="section_type">rental</field>
            <field name="sequence">1</field>
            <field name="is_readonly_commercial">True</field>
            <field name="description">Servicios de alquiler de equipos</field>
        </record>
        
        <!-- Sección: Montaje -->
        <record id="section_template_montaje" model="sale.order.chapter.section.template">
            <field name="name">Montaje</field>
            <field name="chapter_template_id" ref="chapter_template_cremallera_bimastil"/>
            <field name="section_type">assembly</field>
            <field name="sequence">2</field>
            <field name="is_readonly_commercial">True</field>
            <field name="description">Servicios de montaje y desmontaje</field>
        </record>
        
        <!-- Sección: Portes -->
        <record id="section_template_portes" model="sale.order.chapter.section.template">
            <field name="name">Portes</field>
            <field name="chapter_template_id" ref="chapter_template_cremallera_bimastil"/>
            <field name="section_type">transport</field>
            <field name="sequence">3</field>
            <field name="is_readonly_commercial">False</field>
            <field name="description">Servicios de transporte y logística</field>
        </record>
        
        <!-- Sección: Otros Conceptos -->
        <record id="section_template_otros_conceptos" model="sale.order.chapter.section.template">
            <field name="name">Otros Conceptos</field>
            <field name="chapter_template_id" ref="chapter_template_cremallera_bimastil"/>
            <field name="section_type">other</field>
            <field name="sequence">4</field>
            <field name="is_readonly_commercial">False</field>
            <field name="description">Conceptos adicionales y servicios complementarios</field>
        </record>
        
        <!-- Productos de ejemplo para las secciones -->
        <!-- Nota: Estos productos deben existir en el sistema o ser creados por separado -->
        
        <!-- Productos para Alquiler -->
        <record id="product_alquiler_plataforma" model="product.product" forcecreate="True">
            <field name="name">ALQUILER PLATAFORMA DE CREMALLERA BIMASTIL 30 MT</field>
            <field name="default_code">ALQ-CREM-BIM-30</field>
            <field name="type">service</field>
            <field name="categ_id" ref="product.product_category_5"/>
            <field name="list_price">150.00</field>
            <field name="uom_id" ref="uom.product_uom_day"/>
            <field name="uom_po_id" ref="uom.product_uom_day"/>
            <field name="sale_ok">True</field>
            <field name="purchase_ok">False</field>
        </record>
        
        <record id="product_seguro" model="product.product" forcecreate="True">
            <field name="name">SEGURO</field>
            <field name="default_code">SEG-001</field>
            <field name="type">service</field>
            <field name="categ_id" ref="product.product_category_5"/>
            <field name="list_price">25.00</field>
            <field name="uom_id" ref="uom.product_uom_day"/>
            <field name="uom_po_id" ref="uom.product_uom_day"/>
            <field name="sale_ok">True</field>
            <field name="purchase_ok">False</field>
        </record>
        
        <!-- Productos para Montaje -->
        <record id="product_montaje_inicial" model="product.product" forcecreate="True">
            <field name="name">MONTAJE INICIAL BIMASTIL, ALTURA 30 MT</field>
            <field name="default_code">MON-INI-BIM-30</field>
            <field name="type">service</field>
            <field name="categ_id" ref="product.product_category_5"/>
            <field name="list_price">800.00</field>
            <field name="uom_id" ref="uom.product_uom_unit"/>
            <field name="uom_po_id" ref="uom.product_uom_unit"/>
            <field name="sale_ok">True</field>
            <field name="purchase_ok">False</field>
        </record>
        
        <record id="product_desmontaje_final" model="product.product" forcecreate="True">
            <field name="name">DESMONTAJE FINAL BIMASTIL, ALTURA 30 MT</field>
            <field name="default_code">DES-FIN-BIM-30</field>
            <field name="type">service</field>
            <field name="categ_id" ref="product.product_category_5"/>
            <field name="list_price">600.00</field>
            <field name="uom_id" ref="uom.product_uom_unit"/>
            <field name="uom_po_id" ref="uom.product_uom_unit"/>
            <field name="sale_ok">True</field>
            <field name="purchase_ok">False</field>
        </record>
        
        <!-- Productos para Portes -->
        <record id="product_porte_entrega" model="product.product" forcecreate="True">
            <field name="name">PORTE DE ENTREGA</field>
            <field name="default_code">POR-ENT-001</field>
            <field name="type">service</field>
            <field name="categ_id" ref="product.product_category_5"/>
            <field name="list_price">120.00</field>
            <field name="uom_id" ref="uom.product_uom_unit"/>
            <field name="uom_po_id" ref="uom.product_uom_unit"/>
            <field name="sale_ok">True</field>
            <field name="purchase_ok">False</field>
        </record>
        
        <record id="product_porte_retirada" model="product.product" forcecreate="True">
            <field name="name">PORTE DE RETIRADA</field>
            <field name="default_code">POR-RET-001</field>
            <field name="type">service</field>
            <field name="categ_id" ref="product.product_category_5"/>
            <field name="list_price">120.00</field>
            <field name="uom_id" ref="uom.product_uom_unit"/>
            <field name="uom_po_id" ref="uom.product_uom_unit"/>
            <field name="sale_ok">True</field>
            <field name="purchase_ok">False</field>
        </record>
        
        <!-- Productos para Otros Conceptos -->
        <record id="product_gestion_carga" model="product.product" forcecreate="True">
            <field name="name">GESTIÓN DE CARGA Y DESCARGA</field>
            <field name="default_code">GES-CAR-001</field>
            <field name="type">service</field>
            <field name="categ_id" ref="product.product_category_5"/>
            <field name="list_price">80.00</field>
            <field name="uom_id" ref="uom.product_uom_unit"/>
            <field name="uom_po_id" ref="uom.product_uom_unit"/>
            <field name="sale_ok">True</field>
            <field name="purchase_ok">False</field>
        </record>
        
        <record id="product_tabla_madera" model="product.product" forcecreate="True">
            <field name="name">TABLA MADERA PARA BARANDILLA</field>
            <field name="default_code">TAB-MAD-001</field>
            <field name="type">product</field>
            <field name="categ_id" ref="product.product_category_1"/>
            <field name="list_price">15.00</field>
            <field name="uom_id" ref="uom.product_uom_unit"/>
            <field name="uom_po_id" ref="uom.product_uom_unit"/>
            <field name="sale_ok">True</field>
            <field name="purchase_ok">True</field>
        </record>
        
        <!-- Actualizar secciones con productos predefinidos -->
        
        <!-- Productos para sección Alquiler -->
        <record id="section_template_alquiler" model="sale.order.chapter.section.template">
            <field name="product_ids" eval="[(4, ref('product_alquiler_plataforma')), (4, ref('product_seguro'))]"/>
        </record>
        
        <!-- Productos para sección Montaje -->
        <record id="section_template_montaje" model="sale.order.chapter.section.template">
            <field name="product_ids" eval="[(4, ref('product_montaje_inicial')), (4, ref('product_desmontaje_final'))]"/>
        </record>
        
        <!-- Productos para sección Portes -->
        <record id="section_template_portes" model="sale.order.chapter.section.template">
            <field name="product_ids" eval="[(4, ref('product_porte_entrega')), (4, ref('product_porte_retirada'))]"/>
        </record>
        
        <!-- Productos para sección Otros Conceptos -->
        <record id="section_template_otros_conceptos" model="sale.order.chapter.section.template">
            <field name="product_ids" eval="[(4, ref('product_gestion_carga')), (4, ref('product_tabla_madera'))]"/>
        </record>
        
    </data>
</odoo>