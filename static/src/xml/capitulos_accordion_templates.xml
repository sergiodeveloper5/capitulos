<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="capitulos.CapitulosAccordionWidget" owl="1">
        <div class="o_capitulos_accordion">
            <div t-if="!chapters.length" class="alert alert-info">
                No hay capítulos para mostrar
            </div>
            <div t-else="" class="accordion" id="capitulosAccordion">
                <div t-foreach="chapters" t-as="chapter" t-key="chapter.id" class="card mb-2">
                    <!-- Header del capítulo -->
                    <div class="card-header p-2" style="background-color: #f8f9fa; border-bottom: 1px solid #dee2e6;">
                        <button class="btn btn-link text-left w-100 d-flex justify-content-between align-items-center"
                                type="button"
                                t-on-click="() => this.toggleChapter(chapter.name)"
                                style="text-decoration: none; color: #495057; font-weight: 500;">
                            <span>
                                <i class="fa fa-folder-o me-2"></i>
                                <t t-esc="chapter.name"/>
                            </span>
                            <i t-attf-class="fa fa-chevron-{{ this.isChapterCollapsed(chapter.name) ? 'right' : 'down' }}"></i>
                        </button>
                    </div>
                    
                    <!-- Contenido del capítulo -->
                    <div t-if="!this.isChapterCollapsed(chapter.name)" class="card-body p-0">
                        <table class="table table-sm mb-0">
                            <thead style="background-color: #e9ecef;">
                                <tr>
                                    <th style="width: 40px;">Seq</th>
                                    <th>Producto</th>
                                    <th>Descripción</th>
                                    <th style="width: 80px;">Cantidad</th>
                                    <th style="width: 80px;">Unidad</th>
                                    <th style="width: 100px;">Precio Unit.</th>
                                    <th style="width: 100px;">Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="getSections(chapter.data)" t-as="section" t-key="section.id">
                                    <!-- Fila de sección -->
                                    <tr class="section-row">
                                        <td></td>
                                        <td colspan="5">
                                            <i class="fa fa-tag me-2"></i>
                                            <t t-esc="section.name"/>
                                        </td>
                                        <td class="text-center">
                                            <button class="btn-add-product"
                                                    type="button"
                                                    t-on-click="() => this.addProductToSection(chapter.name, section.name)"
                                                    title="Añadir producto a esta sección">
                                                <i class="fa fa-plus"></i> Añadir
                                            </button>
                                        </td>
                                    </tr>
                                    
                                    <!-- Líneas de la sección -->
                                    <tr t-foreach="section.lines" t-as="line" t-key="line.id" class="o_data_row">
                                        <td t-esc="line.sequence || ''"></td>
                                        <td>
                                            <t t-if="state.editingLine === line.id">
                                                <input type="text" 
                                                       class="form-control form-control-sm"
                                                       t-model="state.editValues.product_name"
                                                       t-on-input="(ev) => this.updateEditValue('product_name', ev.target.value)"/>
                                            </t>
                                            <t t-else="">
                                                <span t-esc="line.product_name || ''"></span>
                                            </t>
                                        </td>
                                        <td>
                                            <t t-if="state.editingLine === line.id">
                                                <textarea class="form-control form-control-sm"
                                                         rows="2"
                                                         t-model="state.editValues.name"
                                                         t-on-input="(ev) => this.updateEditValue('name', ev.target.value)"
                                                         placeholder="Descripción / Condiciones particulares"></textarea>
                                            </t>
                                            <t t-else="">
                                                <span t-esc="line.name || ''"></span>
                                            </t>
                                        </td>
                                        <td class="text-end">
                                            <t t-if="state.editingLine === line.id">
                                                <input type="number" 
                                                       class="form-control form-control-sm text-end"
                                                       step="0.01"
                                                       t-model="state.editValues.product_uom_qty"
                                                       t-on-input="(ev) => this.updateEditValue('product_uom_qty', parseFloat(ev.target.value))"/>
                                            </t>
                                            <t t-else="">
                                                <span t-esc="line.product_uom_qty || 0"></span>
                                            </t>
                                        </td>
                                        <td t-esc="line.product_uom || ''"></td>
                                        <td class="text-end">
                                            <t t-if="state.editingLine === line.id">
                                                <input type="number" 
                                                       class="form-control form-control-sm text-end"
                                                       step="0.01"
                                                       t-model="state.editValues.price_unit"
                                                       t-on-input="(ev) => this.updateEditValue('price_unit', parseFloat(ev.target.value))"/>
                                            </t>
                                            <t t-else="">
                                                <span t-esc="formatCurrency(line.price_unit)"></span>
                                            </t>
                                        </td>
                                        <td class="text-end">
                                            <span t-esc="formatCurrency(line.price_subtotal)"></span>
                                            <div class="btn-group btn-group-sm ms-2" role="group">
                                                <t t-if="state.editingLine === line.id">
                                                    <button class="btn btn-success btn-sm"
                                                            type="button"
                                                            t-on-click="() => this.saveEdit(line.id)"
                                                            title="Guardar cambios">
                                                        <i class="fa fa-check"></i>
                                                    </button>
                                                    <button class="btn btn-secondary btn-sm"
                                                            type="button"
                                                            t-on-click="() => this.cancelEdit()"
                                                            title="Cancelar">
                                                        <i class="fa fa-times"></i>
                                                    </button>
                                                </t>
                                                <t t-else="">
                                                    <button class="btn btn-outline-primary btn-sm"
                                                            type="button"
                                                            t-on-click="() => this.startEditLine(line.id)"
                                                            title="Editar línea">
                                                        <i class="fa fa-edit"></i>
                                                    </button>
                                                    <button class="btn btn-outline-danger btn-sm"
                                                            type="button"
                                                            t-on-click="() => this.deleteLine(line.id)"
                                                            title="Eliminar línea">
                                                        <i class="fa fa-trash"></i>
                                                    </button>
                                                </t>
                                            </div>
                                        </td>
                                    </tr>
                                </t>
                                
                                <!-- Fila de total del capítulo -->
                                <tr class="total-row">
                                    <td colspan="6" class="text-end">
                                        Total <t t-esc="chapter.name"/>:
                                    </td>
                                    <td class="text-end" t-esc="formatCurrency(chapter.data.total)"></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>