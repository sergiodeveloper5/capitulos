<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="capitulos.CapitulosAccordionWidget">
        <div class="capitulos-accordion-widget">
            <t t-if="!chapters.length">
                <div class="alert alert-info">
                    <i class="fa fa-info-circle"/> No hay capítulos configurados para este pedido.
                </div>
            </t>
            
            <t t-foreach="chapters" t-as="chapter" t-key="chapter.id">
                <div class="card mb-3">
                    <!-- Encabezado del capítulo -->
                    <div class="card-header">
                        <h5 class="mb-0">
                            <button class="btn btn-link text-left w-100 d-flex justify-content-between align-items-center"
                                    t-on-click="() => this.toggleChapter(chapter.name)"
                                    type="button">
                                <span t-esc="chapter.name"/>
                                <i t-attf-class="fa fa-chevron-#{isChapterCollapsed(chapter.name) ? 'down' : 'up'}"/>
                            </button>
                        </h5>
                    </div>
                    
                    <!-- Contenido del capítulo -->
                    <div t-attf-class="collapse #{isChapterCollapsed(chapter.name) ? '' : 'show'}">
                        <div class="card-body">
                            <t t-foreach="getSections(chapter.data)" t-as="section" t-key="section.name">
                                <div class="section-container mb-4">
                                    <!-- Encabezado de sección -->
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <h6 class="section-title mb-0" t-esc="section.name"/>
                                        <div class="section-controls">
                                            <!-- Selector de categoría -->
                                            <select class="form-control form-control-sm d-inline-block w-auto mr-2"
                                                    t-on-change="(ev) => this.onCategoryChange(chapter.name, section.name, ev.target.value)">
                                                <option value="">Seleccionar categoría...</option>
                                                <t t-foreach="state.categories" t-as="category" t-key="category.id">
                                                    <option t-att-value="category.id" 
                                                            t-att-selected="category.id === section.category_id"
                                                            t-esc="category.name"/>
                                                </t>
                                            </select>
                                            
                                            <!-- Botón añadir producto -->
                                            <button class="btn btn-sm btn-primary"
                                                    t-on-click="() => this.addProductToSection(chapter.name, section.name)"
                                                    type="button">
                                                <i class="fa fa-plus"/> Añadir Producto
                                            </button>
                                        </div>
                                    </div>
                                    
                                    <!-- Tabla de productos -->
                                    <t t-if="section.lines.length">
                                        <table class="table table-sm">
                                            <thead>
                                                <tr>
                                                    <th>Producto</th>
                                                    <th>Cantidad</th>
                                                    <th>Precio Unit.</th>
                                                    <th>Subtotal</th>
                                                    <th>Acciones</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <t t-foreach="section.lines" t-as="line" t-key="line_index">
                                                    <tr>
                                                        <td t-esc="line.name"/>
                                                        <td>
                                                            <t t-if="isEditing(chapter.name, section.name, line_index)">
                                                                <input type="number" 
                                                                       class="form-control form-control-sm"
                                                                       t-att-value="state.editValues.quantity"
                                                                       t-on-input="onQuantityChange"
                                                                       step="0.01"/>
                                                            </t>
                                                            <t t-else="">
                                                                <span t-esc="line.quantity"/>
                                                            </t>
                                                        </td>
                                                        <td>
                                                            <t t-if="isEditing(chapter.name, section.name, line_index)">
                                                                <input type="number" 
                                                                       class="form-control form-control-sm"
                                                                       t-att-value="state.editValues.price_unit"
                                                                       t-on-input="onPriceChange"
                                                                       step="0.01"/>
                                                            </t>
                                                            <t t-else="">
                                                                <span t-esc="formatCurrency(line.price_unit)"/>
                                                            </t>
                                                        </td>
                                                        <td t-esc="formatCurrency(getSubtotal(line))"/>
                                                        <td>
                                                            <t t-if="isEditing(chapter.name, section.name, line_index)">
                                                                <button class="btn btn-sm btn-success mr-1"
                                                                        t-on-click="() => this.saveLine(chapter.name, section.name, line_index)"
                                                                        type="button">
                                                                    <i class="fa fa-check"/>
                                                                </button>
                                                                <button class="btn btn-sm btn-secondary"
                                                                        t-on-click="cancelEdit"
                                                                        type="button">
                                                                    <i class="fa fa-times"/>
                                                                </button>
                                                            </t>
                                                            <t t-else="">
                                                                <button class="btn btn-sm btn-outline-primary mr-1"
                                                                        t-on-click="() => this.editLine(chapter.name, section.name, line_index)"
                                                                        type="button">
                                                                    <i class="fa fa-edit"/>
                                                                </button>
                                                                <button class="btn btn-sm btn-outline-danger"
                                                                        t-on-click="() => this.deleteLine(chapter.name, section.name, line_index)"
                                                                        type="button">
                                                                    <i class="fa fa-trash"/>
                                                                </button>
                                                            </t>
                                                        </td>
                                                    </tr>
                                                </t>
                                            </tbody>
                                        </table>
                                    </t>
                                    <t t-else="">
                                        <div class="alert alert-light">
                                            <i class="fa fa-info-circle"/> No hay productos en esta sección.
                                        </div>
                                    </t>
                                    
                                    <!-- Área de condiciones particulares -->
                                    <div class="mt-3">
                                        <label class="form-label">Condiciones Particulares:</label>
                                        <textarea class="form-control"
                                                  rows="3"
                                                  placeholder="Escriba aquí las condiciones particulares para esta sección..."
                                                  t-att-value="section.condiciones_particulares || ''"
                                                  t-on-change="(ev) => this.updateCondicionesParticulares(chapter.name, section.name, ev.target.value)"/>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </div>
                </div>
            </t>
        </div>
    </t>
</templates>